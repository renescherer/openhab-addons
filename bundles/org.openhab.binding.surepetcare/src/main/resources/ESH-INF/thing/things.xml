            <property name="macAddress" />
            <property name="serialNumber" />
            <property name="hardwareVersion" />
            <property name="firmwareVersion" />
            <property name="pairingAt" />
		</properties>
	</thing-type>

	<thing-type id="pet">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge" />
		</supported-bridge-type-refs>

		<label>Sure Petcare Pet</label>
		<description>A Sure Petcare pet</description>

		<channels>
			<channel id="id" typeId="idType" />
